
    <section class="hero py-16">

        <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/3 px-6">
            <h6 class="text-lg"><em>Are you hungry?</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold">Dont't wait !</h1>
            <button class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary" onclick="window.location.href='/cart';">Order now</button>
        </div>
        <div class="w-1/3">

            <img src="/img/cream_cake.jpeg" class="w-72" alt="">
        </div>
    </div>
    </section>

    <section class="menu container mx-auto py-8">
        <h1 class="text-xl font-bold mb-8">All Cakes</h1> 
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 gap-y-16">

            <% cakes.forEach(function(cake){ %>
                 <div class="w-full md:w-64">
                <img class="h-40 mb-4 mx-auto" src="/img/<%= cake.image %>" alt="">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= cake.name  %></h2>
                    <span class="size py-1 px-4 rounded-full text-xs"><%= cake.size  %></span>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">$<%= cake.price  %></span>
                        <button data-cake="<%= JSON.stringify(cake) %>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div>
            </div>
                
          <%  }); %>
           

         
        </div>
    </section>

