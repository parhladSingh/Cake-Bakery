<section class="py-12">
    <% if (session.cart) { %>
        <div class="order container mx-auto xl:w-1/2">
            <div class="flex items-center border-b border-gray-300 pb-4">
                <img class="w-20 mt-3" src="/img/add_cart_2.jpeg" alt="">
                <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
            </div>
            <div class="cake-list">
                <% for (let cake of Object.values(session.cart.items)) { %>
                    <div class="flex items-center my-8">
                        <img class="w-24" src="/img/<%= cake.item.image %>" alt="">
                        <div class="flex-1 ml-4">
                            <h1><%= cake.item.name %></h1>
                            <span><%= cake.item.size %></span>
                        </div>
                        <span class="flex-1"><%= cake.qty %></span>
                        <span class="font-bold text-2xl">$<%= cake.item.price * cake.qty %></span>
                    </div>
                <% } %>
            </div>
            <hr>
            <div class="text-right py-4">
                <div>
                    <span class="text-lg font-bold">Total Amount</span>
                    <span class="amount text-2xl font-bold ml-2">$<%= session.cart.totalPrice %></span>
                </div>
                    <form action="/orders" method="POST" class="mt-12">
                        <input class="border border-gray-400 p-2 w-1/2 mb-4" type="text" name="phone" placeholder="Phone number">
                        <input class="border border-gray-400 p-2 w-1/2" type="text" name="address" placeholder="Address">
                        <div>
                            <button class="btn-primary px-8 py-4 rounded-full text-white font-bold mt-6" type="submit">Order now</button>
                        </div>
                    </form>
            </div>
        </div>
    <% } else { %>
        <div class="empty-cart py-2 pt-0">
            <div class="container mx-auto text-center">
                <h1 class="text-3xl font-bold mb-1">
                    Cart Empty
                </h1>
                <p class="text-gray text-lg mb-1">You probably haven't ordered a cake. <br> To order a cake, go to the main page.</p>
                <img class="w-2/2 mx-auto" src="/img/ec_2.jpeg" alt="">
                <a href="/" class="inline-block px-8 py-3 rounded-full btn-primary text-white font-bold mt-6">Go back</a>
            </div>
        </div>
    <% } %>
</section>
