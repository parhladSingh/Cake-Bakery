<section id="backgr">
    <div class=" register flex justify-center py-24">
    <div class="bg-white w-full p-8 rounded shadow-md max-w-xs">
        <h2 class="text-2xl font-bold mb-4">Register</h2>
        <!-- Form -->
        <form action="/register" method="POST">
            <% if(messages.error){ %>
            <span class="text-red-500 text-small"><%= messages.error  %></span>
            <% } %>
             <!-- Name -->
            <div class="mb-4">
                <label for="username" class="block text-sm font-medium text-gray-600">Name</label>
                <input type="text" id="username" name="name" value="<%= messages.name  %>" placeholder="Enter your name"
                    class="mt-2 block w-full rounded-md border border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 p-2 pl-3">
            </div>
            <!-- Email Input -->
            <div class="mb-4">
                <label for="username" class="block text-sm font-medium text-gray-600">Email</label>
                <input type="email" id="email" name="email" value="<%= messages.email  %>" placeholder="Enter your email"
                    class="mt-2 block w-full rounded-md border border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 p-2 pl-3">
            </div>

            <!-- Password Input -->
            <div class="mb-4">
                <label for="password" class="black text-sm font-medium text-gray-600">Password</label>
                <input type="password" id="password" name="password" placeholder="Password"
                    class="mt-2 block w-full rounded-md border border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50 p-2 pl-3">
            </div>

            <!-- Sign In Button -->
            <div class="flex items-center justify-between">
            <button type="submit"
                class="btn-primary rounded-full text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Register
            </button>
            <a href="/login" class="text-sm "> Already have account?</a>
            </div>
        </form>

        <p class="text-center text-gray-500 text-xs mt-4">
            &copy;2024 Cake Bakery's. All rights reserved.
        </p>
    </div>
    </div>
</section>